{
  "name": "niconico-meeting",
  "version": "0.0.1",
  "main": "index.js",
  "dependencies": {
    "config": "^3.3.1"
    "lodash": ">=4.17.19"
  },
  "devDependencies": {
    "electron": "^9.0.4",
    "electron-builder": "^22.7.0",
    "electron-packager": "^15.0.0"
  },
  "scripts": {
    "start": "chcp 65001 && electron .",
    "build": "electron-packager . niconico-meeting --platform=win32 --arch=x64 --overwrite"
  },
  "build": {
    "appId": "niconico-meeting-app",
    "publish": {
      "provider": "github",
      "owner": "UC-SADA",
      "repo": "niconico-meeting",
      "releaseType": "release"
    },
    "directories": {
      "output": "dist"
    },
    "linux": {
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  }
}
